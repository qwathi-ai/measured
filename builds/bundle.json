{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext",
      "dom",
      "es2015"
    ],
    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "outDir": "../dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "typeRoots": [
      "../node_modules"
    ],
    "types": [
      "@types/node"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../src",
    "paths": {
      "@core/*": ["core/*"],
      "@definitions/*": ["definitions/*"]
    }
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../src/**/*.spec.ts"
  ]
}
