{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "outDir": "../bundle",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "typeRoots": [
      "../node_modules"
    ],
    "types": [
      "@types/node"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@parsers/*": ["parsers/*"]
    }
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../src/**/*.spec.ts",
    "../src/debug.ts"
  ]
}
